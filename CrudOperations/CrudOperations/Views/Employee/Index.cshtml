@{
    ViewData["Title"] = "Employee Page";
}

<link href="~/css/table.css" rel="stylesheet" />

<button class="btn btn-primary mb-4" id="addEmp" onclick="openModal()">+AddEmployee</button>


<table >
    <thead class="text-center">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>State</th>
            <th>City</th>
            <th>Salary</th>
            <th>Operation</th>
        </tr>
    </thead>

    <tbody  id="table_data" class="text-center">   </tbody>
</table>



<div class="modal fade modal " id="myModal">
    <div class="modal-dialog">

         <div class="modal-content">
            <div class="modal-header">
                <h4 class="text-info modal-title">Add Employee</h4>

                <button class="close" data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post" id="myForm">
                    <div class="form-group labelId">
                        <lable>Id</lable>
                        <input type="text" class="form-control" id="EmpId" disabled="disabled" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <lable>Name</lable>
                        <input  type="text" placeholder="enter name" class="form-control" id="Name" autocomplete="off"/>
                    </div>
                    <div class="form-group">
                        <lable>State</lable>
                        <input type="text" placeholder="enter state" class="form-control" id="State" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <lable>City</lable>
                        <input type="text" placeholder="enter city" class="form-control" id="City" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <lable>Salary</lable>
                        <input type="text" placeholder="enter salary" class="form-control" id="Salary" autocomplete="off" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="addEmployee" onclick="AddEmployee()">Save</button>
                <button class="btn btn-warning" id="updateEmployee" style="display:none;" onclick="updateEmployee()">Update</button>

                <button class="btn btn-danger" data-bs-dismiss="modal" onclick="clearText()">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/employee.js"></script>
